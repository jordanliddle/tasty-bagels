<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Find Your Sandwich</h1>

<% cache ['store', Product.latest] do %>
	<% @products.each do |p| %>
		<% cache ['entry', p] do %>
			<div class="entry">
				<%= image_tag(p.image_url) %>
				<h3><%= p.title %>
				<span class="price">// <%= number_to_currency(p.price) %></span></h3>
				<%= sanitize(p.description) %>
				<div class="price_line">
			
					<%= button_to 'Add Sandwich', line_items_path(product_id: p), :class => 'btn btn-md btn-primary', remote: true %>
				</div>
			</div>
		<% end %>
	<% end %>
<% end %>