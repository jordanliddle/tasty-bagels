<% unless cart.line_items.empty? %>
<div class="cart_title">Your Bagel Basket</div>

<table>
	<%= render @cart.line_items %>
	
	<tr class="total_line">
		<td colspan= "2">TL&nbsp;</td>
		<td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
	</tr>
</table>

<%= button_to 'Checkout', new_order_path, method: :get, :class => 'btn btn-sm btn-primary' %>
<%= button_to 'Empty Cart', @cart, method: :delete, :class => 'btn btn-sm btn-warning', data: { confirm: "You're OK with this?" } %>
<% end %>